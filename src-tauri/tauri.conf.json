{
  "$schema": "../ui/node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Synapse",
  "version": "0.1.0",
  "identifier": "com.tauri.synapse",
  "build": {
    "beforeDevCommand": "npm --prefix ui run dev",
    "beforeBuildCommand": "npm --prefix ui run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Synapse",
        "width": 800,
        "height": 600,
        "decorations": false,
        "transparent": false,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "window-controls",
          "description": "Capability for window control operations",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:event:allow-listen",
            "core:window:allow-close",
            "core:window:allow-create",
            "core:webview:allow-create-webview-window",
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-maximize",
            "core:window:allow-minimize",
            "core:window:allow-unmaximize",
            "core:window:allow-unminimize",
            "core:window:allow-start-dragging",
            "core:window:allow-is-maximized",
            "core:window:allow-get-all-windows",
            "core:window:allow-set-size"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/S_logo.svg",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}